---
import { projects } from '@utils/projects';
---
  {projects.map((project) => {
    return (
      <div class="w-full my-8 p-8 rounded-md shadow-md border border-gray-300">
        <div class="flex flex-col md:flex-row gap-3 items-center mb-4">
          <h2 class="text-2xl font-bold mb-2">{project.name}</h2>
          <a href={project.githubLink} class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" target="_blank" rel="noopener noreferrer">
            View Project
          </a>
        </div>

        <div class="flex flex-wrap space-x-2">
          {project.techStack.map((tech) => (
            <span class="border-gray-300 rounded-md border px-3 py-1">
              {tech}
            </span>
          ))}
        </div>

        <p class="text-base mb-6">{project.description}</p>
        <div class="flex md:flex-col gap-2 mb-6">
          
          {project.imagePaths && project.imagePaths.map((image) => (
            <img src={image} alt="a" class="w-full rounded-lg border border-gray-300 cursor-pointer" />
          ))}
        </div>
      </div>
    );
  })}
